{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@icons/*": ["./src/icons/*"],
      "@router/*": ["./withRouters/*"]
    },
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "webpack.config.js"],
  "exclude": ["node_modules"]
}
